<%- include('header') -%>
<body>
  <div class="box" id="heading">
    <h1> <%= listTitle %></h1>
  </div>

  <div class="box">
    <% for (let i=0; i<addItem.length; i++){  %>
    <div class="item">
      <input type="checkbox" />
      <p> <%= addItem[i] %> </p>
    </div>
    <%  } %>
    <form action="/" method="post">
      <input type="text" name="todo" placeholder="Do Next" autocomplete="off">
      <button type="submit" name="list" value=<%= listTitle %> > + </button>
    </form>

  </div>
</body>
<%- include('footer'); -%>
</html>
